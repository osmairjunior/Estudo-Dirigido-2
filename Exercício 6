<?php

//6. Faça um algoritmo que leia três números e mostre o maior deles.

print "Digite o primeiro número: ";
$num1 = fgets(STDIN);

print "Digite o segundo número: ";
$num2 = fgets(STDIN);

print "Digite o terceiro número: ";
$num3 = fgets(STDIN);

if ($num1 > $num2 and $num1 > $num3) {
    print "O primeiro número é maior";
}

elseif ($num2 > $num1 and $num2 > $num3) {
    print "O segundo número é maior";
}

elseif ($num3 > $num1 and $num3 > $num2) {
    print "O terceiro número é maior";
}

elseif ($num1 == $num2 and $num1 == $num3) {
    print "Todos os números tem o mesmo valor \n";
}

