<?php

/* 3. Faça um algoritmo que verifique se uma letra digitada é "F" ou "M". 
Conforme a letra escrever:  F - Feminino, M - Masculino, Sexo Inválido.   */

print "Insira o seu sexo [F/M]: ";
$sexo = fgetc(STDIN);

if ($sexo == "F" or $sexo == "f") {
	print "Sexo feminino";
}

elseif ($sexo == "M" or $sexo == "m") {
	print "Sexo masculino";
}

else {
	print "Sexo inválido";
}
